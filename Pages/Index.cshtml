@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var error = ViewData["Error"];
    var imagePath = "";
    if (ViewData["Zodiac"] != null)
    {
        imagePath = "images/" + (ViewData["Zodiac"] as string)!.ToLower() + ".png";
    }
}

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" type="number"/>
        </div>

        <div class="form-group">
            <br/>
            <input type="submit" value="Get Zodiac" class="btn btn-primary"/>
            <a asp-action="Index" class="btn btn-success">Clear</a>
        </div>
    </form>
    <br/>
    @if (error != null) {
        <div class="mx-auto alert alert-danger" style="width: 300px;">
            <p>Year must be between 1900 and next year. Please tyry again.</p>
        </div>
    }
    else {
        @if (imagePath != "") {
            <div class="mx-auto alert alert-success" style="width: 300px;">
                <p>Your Zodiac is <b>@ViewData["Zodiac"]</b></p>
                <img src="@imagePath" alt="Zodiac Image">
            </div>
        }
    }
</div>
